{
  "name": "polyfront-slider",
  "version": "0.0.2",
  "description": "Polished, accessible TypeScript Web Component slider: discrete arrays or min/max/step, auto-step, missing-step disabling, blocked intervals, min distance, range/vertical/RTL, ARIA, form-associated. Storybook + Vitest.",
  "license": "MIT",
  "author": "Nirmal Samaranayaka <nirmal.fullstack@gmail.com>",
  "keywords": [
    "slider", "range-slider", "dual-thumb-slider", "vertical-slider", "horizontal-slider",
    "discrete-slider", "continuous-slider", "web-components", "custom-element", "typescript",
    "storybook", "accessible", "a11y", "aria", "keyboard-accessible", "touch", "pointer-events",
    "ticks", "labels", "tooltip", "blocked-intervals", "min-thumb-distance", "rtl", "i18n",
    "forms", "form-associated", "react-wrapper", "vite", "webpack"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/NirmalSamaranayaka/polyfront-slider.git"
  },
  "homepage": "https://github.com/NirmalSamaranayaka/polyfront-slider#readme",
  "bugs": { "url": "https://github.com/NirmalSamaranayaka/polyfront-slider/issues" },

  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "source": "src/index.ts",

  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.cjs",
      "default": "./dist/index.mjs"
    }
  },

  "unpkg": "./dist/index.mjs",
  "jsdelivr": "./dist/index.mjs",

  "sideEffects": false,
  "engines": { "node": ">=18.18.0" },
  "packageManager": "npm@10",

  "scripts": {
    "build": "tsup src/index.ts --format esm,cjs --dts --minify --sourcemap --clean",
    "dev": "tsup src/index.ts --watch --format esm,cjs --dts --sourcemap",
    "typecheck": "tsc --noEmit",
    "test": "vitest run --passWithNoTests=false",
    "test:watch": "vitest",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build",
    "prepublishOnly": "npm run typecheck && npm run build && npm test"
  },

  "files": ["dist", "README.md", "LICENSE", "CHANGELOG.md", "package.json"],

  "publishConfig": { "access": "public" },

  "devDependencies": {
    "@storybook/addon-essentials": "^8.6.14",
    "@storybook/web-components": "^8.6.14",
    "@storybook/web-components-vite": "^8.6.14",
    "@testing-library/dom": "^10.4.0",
    "storybook": "^8.6.14",
    "tsup": "^8.5.0",
    "typescript": "^5.6.3",
    "vite": "^5.4.10",
    "vitest": "^2.1.9"
  },
  "vitest": { "environment": "jsdom" }
}
